package programaci√≥n.pkg4;

import java.util.ArrayList;

/**
 *
 * @author Kenneth
 */
public class Contactos {
    private String nombre;
    private ArrayList<String> telefonos;
    private String lugar;
    private String dir;
    private ArrayList<String> correo;
    
    public Contactos(){
    this.nombre = "";
    this.telefonos = new ArrayList<>();
    }
    
    public Contactos(String nombre, String lugar, String dir) {
        this.nombre = nombre;
        this.telefonos = new ArrayList<String>();
        this.lugar = lugar;
        this.dir = dir;
        this.correo = new ArrayList<String>();
    }
    
    public ArrayList<String> getTelefonos(){
        return telefonos;
    }
    
    public void setTelefonos(String telefonos){
        this.telefonos.add(telefonos);        
    }
    
    public void setCorreo(String correo){
        this.correo.add(correo);        
    }

    public String getNombre() {
        return nombre;
    }

    public void setNombre(String nombre) {
        this.nombre = nombre;
    }

    public String getLugar() {
        return lugar;
    }

    public void setLugar(String lugar) {
        this.lugar = lugar;
    }

    public String getDir() {
        return dir;
    }

    public void setDir(String dir) {
        this.dir = dir;
    }   
}
